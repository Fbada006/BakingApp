<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:ignore="NestedWeights">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="@string/pastry_ingredients_label"
            android:textSize="@dimen/universal_app_text_size" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pastry_list"
            android:name="com.disruption.bakingapp.PastryListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/pastry_list_content_item" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:ignore="NestedWeights">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="@string/pastry_steps_label"
            android:textSize="@dimen/universal_app_text_size" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pastry_list1"
            android:name="com.disruption.bakingapp.PastryListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/pastry_list_content_item" />
    </LinearLayout>
</LinearLayout>